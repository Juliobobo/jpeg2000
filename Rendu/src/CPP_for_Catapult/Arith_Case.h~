#include <ac_fixed.h>
#include <ac_int.h>
#include <iostream>
#include <sstream>

class Arith_Case
{ // classe pour les cases du tableau
	uint16 Number_Apparition;
	ac_fixed<16, 1, false> interval_Start;
	ac_fixed<16, 1, false> interval_End;

  public:
	Arith_Case();
	Arith_Case(uint16 occurence);
	void increment_Apparition();
	uint16 getApparition();
	void set_Start(ac_fixed<16, 1, false> start);
	ac_fixed<16, 1, false> get_Start();
	void set_End(ac_fixed<16, 1, false> end);
	ac_fixed<16, 1, false> get_End();
	void toString();
};

