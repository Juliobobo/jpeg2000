#include "Arith_Case.h"
#include <sstream>

Arith_Case::Arith_Case()
    : Number_Apparition(0), interval_Start(), interval_End()
{
}

Arith_Case::Arith_Case(uint16 occurence)
    : Number_Apparition(occurence), interval_Start(0), interval_End(0)
{
}

void Arith_Case::increment_Apparition()
{
	++Number_Apparition;
}

uint16 Arith_Case::getApparition()
{
	return Number_Apparition;
}

void Arith_Case::set_Start(ac_fixed<16, 1, false> start)
{
	interval_Start = start;
}

ac_fixed<16, 1, false> Arith_Case::get_Start()
{
	return interval_Start;
}
ac_fixed<16, 1, false> Arith_Case::get_End()
{
	return interval_End;
}

void Arith_Case::set_End(ac_fixed<16, 1, false> end)
{
	interval_End = end;
}
